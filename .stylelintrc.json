{
    "plugins": [
        "stylelint-scss"
    ],

    "extends": ["stylelint-config-standard", "stylelint-config-recess-order"],

    "rules": {
        "scss/dollar-variable-pattern": "^foo",
        "scss/selector-no-redundant-nesting-selector": true,
        "indentation": 4,
        "at-rule-no-unknown": [true, {
            "ignoreAtRules": ["Include", "mixins"]
        }]
    }
}